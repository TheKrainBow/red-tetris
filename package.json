{
  "name": "red_tetrisboilerplate",
  "version": "0.0.1",
  "author": "redpelicans",
  "license": "MIT",
  "scripts": {
    "eslint": "echo 'lint disabled for now'",
    "client-dist": "NODE_ENV=production webpack --mode production --progress",
    "client-dev": "webpack serve --hot --host ${CLIENT_HOST:-0.0.0.0} --port ${CLIENT_PORT:-8080} --mode development",
    "srv-dev": "DEBUG=tetris:* babel-watch -w backend backend/main.js",
    "srv-dist": "DEBUG=tetris:* babel backend --out-dir dist/backend",
    "start:server": "node -r @babel/register backend/main.js",
    "test:frontend": "mocha test/fake.js test/react*.js test/redux*.js",
    "test:backend": "mocha test/server*.js",
    "test": "npm run test:frontend && npm run test:backend",
    "coverage": "NODE_ENV=test nyc --include backend --include frontend --all --reporter=text --reporter=lcov mocha"
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18",
    "react-redux": "^9",
    "redux": "^5",
    "redux-logger": "^3",
    "redux-thunk": "^2",
    "socket.io": "^4",
    "debug": "^4"
  },
  "devDependencies": {
    "@babel/cli": "^7",
    "@babel/core": "^7",
    "@babel/preset-env": "^7",
    "@babel/preset-react": "^7",
    "@babel/register": "^7",
    "babel-loader": "^9",
    "babel-watch": "^7",
    "chai": "^5",
    "mocha": "^11",
    "nyc": "^17",
    "react-test-renderer": "^18",
    "socket.io-client": "^4",
    "webpack": "^5",
    "webpack-cli": "^5",
    "webpack-dev-server": "^5"
  },
  "nyc": {
    "all": true,
    "report-dir": "coverage",
    "temp-directory": "coverage/.nyc_output",
    "include": [
      "backend",
      "frontend"
    ],
    "exclude": [
      "frontend/dist",
      "coverage",
      "node_modules",
      "dist"
    ]
  }
}
